@model StudentManagmentSystem.WebApp.Models.ViewModel.ApplicationUserViewModel;

<style>
    body {
    background-color: #f5f5dc; /* Beige background */       
    font-family: 'Arial', sans-serif;
    }

    h2 {
    color: #8b4513; /* Dark brown */
    text-align: center;
    margin-top: 20px;
    }

    .form-container {
    width: 50%;
    margin: 0 auto;
    padding: 20px;
    background-color: #fffaf0; /* Light beige */
    border-radius: 10px;
    box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.2);
    }

    .form-group {
    margin-bottom: 15px;
    }

    label {
    font-weight: bold;
    color: #5a3d1a; /* Medium brown */
    }

    .form-control {
    width: 100%;
    padding: 10px;
    border: 1px solid #8b4513; /* Brown border */
    border-radius: 5px;
    background-color: #faebd7; /* Light cream */
    }

    .btn-container {
    text-align: center;
    margin-top: 20px;
    }

    .btn-primary {
    background-color: #8b4513; /* Saddle brown */
    color: white;
    padding: 10px 20px;
    font-size: 16px;
    border: none;
    border-radius: 5px;
    text-decoration: none;
    }

    .btn-primary:hover {
    background-color: #a0522d; 
    }

    .btn-secondary {
    background-color: #d2b48c;   
    color: black;
    padding: 10px 20px;
    font-size: 16px;
    border: none;
    border-radius: 5px;
    text-decoration: none;
    }

    .btn-secondary:hover {
    background-color: #c0a080; 
    }
</style>

<h2>@(Model.Id > 0 ? "Update User" : "Add User")</h2>

<div class="form-container">
    <form asp-action="AddUpdateUser" method="post">
        <input asp-for="Id" type="hidden" />

        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" required />
        </div>

        <div class="form-group">
            <label>Last Name:</label>
            <input asp-for="LastName" class="form-control" required />
        </div>

        <div class="form-group">
            <label>Email:</label>
            <input asp-for="EmailId" type="email" class="form-control" required />
        </div>

        <div class="form-group">
            <label>Address 1:</label>
            <input asp-for="Address1" class="form-control" />
        </div>

        <div class="form-group">
            <label>Address 2:</label>
            <input asp-for="Address2" class="form-control" />
        </div>

        <div class="form-group">
            <label>Mobile Number:</label>
            <input asp-for="MobileNumber" class="form-control" required />
        </div>

        <div class="form-group">
            <label>Username:</label>
            <input asp-for="Username" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Password:</label>
            <input asp-for="Password" class="form-control" type="password" required />
        </div>


        <div class="form-group">
            <label>Role:</label>
            <select asp-for="RoleId" asp-items="@(Model.Roles != null ? new SelectList(Model.Roles, "Id", "Name") : null)" class="form-control">
                <option value="">Select Role</option>
            </select>
        </div>

        <div class="form-group">
            <label>Department:</label>
            <select asp-for="DepartmentId"  class="form-control">
                <option value="">Select Department</option>
                @foreach(var item in Model.Departments)
                {
                    if (!item.IsDelete)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                    
                }
            </select>
        </div>

        <div class="btn-container">
            <button type="submit" class="btn btn-primary">@(Model.Id > 0 ? "Update User" : "Create User")</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
