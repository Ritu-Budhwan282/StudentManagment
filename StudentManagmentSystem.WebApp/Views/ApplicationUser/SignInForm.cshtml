@{
    Layout = null;
}

<head>
    <style>
        body {
            background-color: #8b5e3c; 
            font-family: 'Poppins', sans-serif;
            color: #8b5e3c;
            position: relative;
            overflow: hidden;
        }

            /* Doodle Background */
            body::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-image: url('https://www.transparenttextures.com/patterns/sketchy-grid.png'); /* Subtle doodle effect */
                opacity: 0.2;
                z-index: -1;
            }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-form {
            background-color: #f5f5dc;
            ;
             /* Light form for contrast */
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(255, 255, 255, 0.1);
            width: 320px;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

            /* Doodle Decoration */
            .login-form::before {
                content: "📚 🎓 ✏️ 📖";
                position: absolute;
                top: 10px;
                left: 10px;
                font-size: 24px;
                opacity: 0.3;
            }

            .login-form h2 {
                color: #f5f5f5;
                margin-bottom: 15px;
            }

            .login-form label {
                display: block;
                font-weight: bold;
                margin-top: 12px;
                color: #555;
            }

            .login-form input {
                width: 100%;
                padding: 10px;
                margin-top: 5px;
                border: 1px solid #ddd;
                border-radius: 5px;
                background-color: #fff;
                color: #333;
            }

                .login-form input:focus {
                    border-color: #007bff;
                    outline: none;
                    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
                }

            .login-form button {
                width: 100%;
                padding: 12px;
                margin-top: 15px;
                background-color: #007bff; /* Blue accent */
                color: #fff;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                font-size: 16px;
            }

                .login-form button:hover {
                    background-color: #0056b3;
                }

        /* Message Box */
        #message {
            color: #ff5e57;
            text-align: center;
            font-size: 14px;
            margin-bottom: 10px;
        }


    </style>
</head>
<body>
    <div class="container">
        <form class="login-form" id="SignInForm">
            <h2>Login</h2>
            <div id="message"></div>
            <label for="username">Username</label>
            <input type="text" id="username" name="username" aria-label="Username" required />

            <label for="password">Password</label>
            <input type="password" id="password" name="password" aria-label="Password" required />

            <button type="submit">Login</button>
        </form>
    </div>

    <!-- Use the latest version of jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#SignInForm').on('submit', function (e) {
                e.preventDefault();

                var username = $('#username').val().trim();
                var password = $('#password').val().trim();

                $('#message').hide().text('');

                
                if (!username || !password) {
                    $('#message').text("Please fill in both fields.").show();
                    return;
                }

                var formData = $(this).serialize();

                $.ajax({
                    method: 'POST',
                    url: 'SignIn',
                    data: formData,
                    success: function (response) {
                        if (response.isSignIn) {
                            
                                window.location.href = "https://localhost:7192/";
                            
                        } else {
                            $('#message').text("Invalid username or password.").show();
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error("Error: ", error);
                        $('#message').text("An error occurred. Please try again later.").show();
                    }
                });
            });
        });
    </script>
</body>

