@model StudentManagmentSystem.WebApp.Models.ViewModel.ApplicationUserViewModel;

<style>
    body {
        background-color: #f5f5dc; /* Beige background */
        font-family: 'Arial', sans-serif;
    }

    h2 {
        color: #8b4513; /* Dark brown */
        text-align: center;
        margin-top: 20px;
    }

    .table {
        width: 60%;
        margin: 20px auto;
        border-collapse: collapse;
        background-color: #fffaf0; /* Light beige */
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.2);
    }

    th, td {
        padding: 12px;
        border: 1px solid #8b4513; /* Brown border */
        text-align: left;
    }

    th {
        background-color: #a0522d; /* Dark brown */
        color: white;
        font-size: 16px;
    }

    td {
        background-color: #faebd7; /* Light cream */
    }

    .back-btn {
        display: block;
        width: 200px;
        margin: 20px auto;
        text-align: center;
        background-color: #8b4513; /* Saddle brown */
        color: white;
        padding: 10px 15px;
        font-size: 16px;
        border-radius: 5px;
        text-decoration: none;
    }

        .back-btn:hover {
            background-color: #a0522d; /* Darker brown */
        }
</style>

<h2>User Details</h2>

<table class="table">
    <tr>
        <th>First Name</th>
        <td>@Model.FirstName</td>
    </tr>
    <tr>
        <th>Last Name</th>
        <td>@Model.LastName</td>
    </tr>
    <tr>
        <th>Email Id</th>
        <td>@Model.EmailId</td>
    </tr>
    <tr>
        <th>Role</th>
        <td>@Model.RoleName</td>
    </tr>
    <tr>
        <th>Department</th>
        <td>@Model.DepartmentName</td>
    </tr>
</table>

<a asp-action="Index" class="back-btn">⬅ Back to List</a>

