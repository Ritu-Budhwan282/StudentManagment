@{
    var loggedInUserId = Context.Session.GetInt32("LoggedInUserId");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @* Dynamically sets the page title based on ViewData["Title"]. *@
    <script type="importmap"></script>
    @* Loads Bootstrap CSS for styling *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @* Loads Bootstrap CSS for styling *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* Loads additional styles specific to this web application *@
    <link rel="stylesheet" href="~/StudentManagmentSystem.WebApp.styles.css" asp-append-version="true" />
</head>
<body>

    <header>
        @* allows users to navigate between pages *@
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">StudentManagmentSystem</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        
                       
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @* <li class="nav-item"> *@
                        @*     <a class="nav-link text-dark" asp-area="" asp-controller="StudentRecords" asp-action="Index">Student Profiles</a> *@
                        @* </li> *@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ApplicationUser" asp-action="Index">Student Records</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Department" asp-action="Index">Departments</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    
                    </ul>
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <img class="profile-img" src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" width="40">
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/ApplicationUser/Profile?id=@loggedInUserId.ToString()">Profile</a></li>

                            <li><a class="dropdown-item" asp-action="SignInForm" asp-controller="ApplicationUser">SignOut</a></li>
                        </ul>
                    </div>

                </div>
            </div>
        </nav>
    </header>
    @* dynamically renders page-specific content using @RenderBody(), which is replaced by the content of each individual View *@
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted"> *@
    @*     <div class="container"> *@
    @*         &copy; 2025 - StudentManagmentSystem.WebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
    @*     </div> *@
    @* </footer> *@
    @* Used for AJAX and DOM manipulation *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @* Enables Bootstrap features like modals and dropdowns *@
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @* Allows individual views to inject their own JavaScript if needed, child views to inject additional JavaScript scripts at a specific place in the layout*@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
